<!--pages/index/search/search.wxml-->
<view class='container'>
  <view class='section bg-white'>
    <view class='mt-n'>
      <label class='search'>
        <image class='i-search' src='/images/icon/icon_search.png'></image>
        <input catchtap="onSearchTap" type='text' class='search' placeholder='输入想要搜索的关键词' maxlength='20'></input>
      </label>
      <text catchtap='onBackTap' class='ver-middle' style='font-size:30rpx;color:#2DA3FF'>取消</text>
    </view>
  </view>
  <view class='section pt-n'>
    <view class='top_search_tit'>
      热门搜索
    </view>
    <view class='top_search'>
     <text wx:for='{{hotWords}}'>{{item.search_content}}</text>
    </view>
    <view class='past_search'>
      <view class='past_search_tit'>
        <text>搜索历史</text>
        <view catchtap='deleteall'>
          <image src='/images/icon/icon_delete.png'></image>
          清除历史
        </view>
      </view>
    </view>
  </view>
  <view class='past_search_list'>
    <view wx:for='{{searchHistory}}'>
      {{item.search_content}}
      <text catchtap='deleteSome' data-postid='{{item}}' style='float:right;font-size:30rpx;'>×</text>
    </view>
  </view>
</view>