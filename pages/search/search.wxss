/* pages/index/search/search.wxss */
view,text{
  font-size: 28rpx;
  color:#666;
}
page {
  height: 100%;
}

.container {
  background: #f3f4f8;
  height: 100%;
}

.section {
  margin: 0;
  padding: 20rpx;
}

.search input {
  font-size: 24rpx;
}

.search {
  width: 85%;
  margin-left: 0;
}

.ver-middle {
  font-size: 30rpx;
}

.top_search {
  margin: 30rpx 0;
}

.top_search text {
  display: inline-block;
  background: #fff;
  padding: 8rpx 30rpx;
  border-radius: 100rpx;
  margin-right: 25rpx;
  margin-bottom: 25rpx;
}

.past_search_tit text{
  font-weight: 500;
}
.past_search_tit view{
  float:right;
  font-size:24rpx;
}
.past_search_tit view>image{
  width:28rpx;
  height:28rpx;
  vertical-align:text-bottom;
}
.past_search_list view{
  background: #fff;
  border-bottom: 1rpx solid #F1F1F1;
  padding: 20rpx;
  color: #333;
  font-size: 30rpx;
}
.past_search_list view:last-child{
  border-bottom: 0;
}




/* 啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊 */
.action {
  margin: 0 20rpx;
}

.action > view {
  display: inline-block;
  width: 33%;
  text-align: center;
  font-size: 34rpx;
  padding: 15rpx 0;
}

.action .default {
  text-align: center;
  font-size: 12rpx;
}

.action .default view {
  border: 3rpx solid #fff;
  border-radius: 100%;
  width: 25%;
  display: inline-block;
}

.action>.active {
  color: #0a93ff;
  font-weight: 600;
}

.action .active .default view {
  border-color: #0a93ff;
}

.mb-md>image {
  width: 100%;
  border-radius: 10rpx;
}

.meeting_msg .meet_tit {
  font-size: 30rpx;
  vertical-align: middle;
  margin-right: 20rpx;
}

.meeting_msg .meet_state {
  padding: 5rpx 10rpx;
  border: 1rpx solid;
  border-radius: 100rpx;
  font-size: 20rpx;
  /* color: #f5a623; */
  vertical-align: middle;
}

.meeting_msg .meet_state.z {
  border-color: #f5a623;
  color: #f5a623;
}

.meeting_msg .meet_state.w {
  border-color: #c6c6c6;
  color: #c6c6c6;
}

.meeting_msg view {
  font-size: 24rpx;
  color: #666;
  margin-top: 8rpx;
}

.inline-block text {
  color: #bdbdbd;
  font-size: 22rpx;
  vertical-align: middle;
  margin-left: 8rpx;
}
