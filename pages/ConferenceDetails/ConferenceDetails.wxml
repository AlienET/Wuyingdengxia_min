<!--pages/ConferenceDetails/ConferenceDetails.wxml  会议资讯详情-->
<view class='img_tit'>
  <image mode='widthFix' src='{{aboutData.meeting_image}}'></image>
</view>
<view class='pad20'>
  <view class='meet_'>
    <image src='/images/icon/didian.png' style='width:36rpx;height:36rpx;'></image>
    <text>{{aboutData.meet_title}}</text>
  </view>
  <text class='meet_inner'><!--2018-03-21 至 2018-03-21-->{{aboutData.begin_time}}</text>
  <view class='meet_ mt-md'>
    <image src='/images/icon/time.png' style='width:36rpx;height:36rpx;'></image>
    <text>会议地点</text>
  </view>
  <text class='meet_inner'>{{aboutData.meet_address}}</text>
</view>
<view class='gap'></view>
<view class='pad20'>
  <view class='meets'>会议介绍</view>
  <view class='meet_txt text-hide' style='{{isIntroduce?"-webkit-line-clamp:initial;":"-webkit-line-clamp:2;"}}'>
    {{aboutData.meet_content}}

  </view>
  <view class='txt-center mt-md'>
    <text catchtap='isIntroduce' class='unAll'>{{isIntroduce?'点击收起':'展开全部'}}</text>
    <!-- 展开全部后 -->
  </view>
</view>
<view class='gap'></view>
<view class='pad20' style='margin-bottom:90rpx;'>
  <view class='meets'>会议日程</view>
  <view class='meet_txt pt-n' wx:if='{{schedule != ""}}'>
    <view class='table'>
      <view class='tr mt-md' wx:for='{{schedule}}' wx:if='{{isSchedule?true:index<2}}'>
        <view class='td_t'>{{item.meet_class_begin}} — {{item.meet_class_end}}</view>
        <view class='td_i'>{{item.main_content}}</view>
      </view>
    </view>
    <view class='txt-center mt-md'>
      <text catchtap='isSchedule' class='unAll'>{{isSchedule?'点击收起':'展开全部'}}</text>
      <!-- 展开全部后 -->
    </view>
  </view>
</view>
<view class='flex-b'>
   <!-- <text catchtap='onEnrollTap' class='bm' style='{{aboutData.isfinish=="1"?"":"background:#eee;color:#999"}}'>报 名</text>  -->
  <view class='lxhw' catchtap='onCallTap'>
    <image src='/images/icon/huiwu.png' style='vertical-align:middle;width:40rpx;margin-right:10rpx;' mode='widthFix'></image>
    <text style='vertical-align:middle;font-size:32rpx;'>联系会务</text>
  </view>
  <view class='baom' catchtap='onEnrollTap' style='{{aboutData.is_attend=="0"?"":"background:#eee;color:#999"}}'>{{aboutData.is_attend=='0'?'报 名':'已报名'}}</view>
</view>