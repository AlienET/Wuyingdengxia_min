  margin-left: 0;
}

.ml-md {
  margin-left: 20rpx;
}

.pt-n {
  padding-top: 0 !important;
}

.txt-r {
  text-align: right;
}

.txt-l {
  text-align: left;
}

.txt-center {
  text-align: center;
}

.bg-white {
  background-color: #fff;
}

.hide {
  display: none;
}

.inline-block {
  display: inline-block !important;
}

.text-hide {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

/* 评论列表 */

.comment .comment_all {
  padding: 20rpx;
  border-bottom: 1rpx solid #e7e7e7;
  font-size: 30rpx;
}

.comment_list .column {
  padding: 20rpx;
  padding-top: 0;
  padding-right: 0rpx;
  display: flex;
  flex-direction: row;
}

.comment_list .column:first-child {
  padding-top: 20rpx;
}

.column .column_img image {
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  vertical-align: middle;
}

.column .column_inner {
  margin-left: 10rpx;
  width: 100%;
  padding: 0 20rpx 20rpx 0;
  border-bottom: 1rpx solid #ebebeb;
}

.column .column_inner text {
  vertical-align: middle;
  font-size: 22rpx;
  color: rgb(180, 180, 180);
}

.column .column_btn {
  float: right;
  /*  */
}

.column .column_btn image {
  margin-left: 15rpx;
}

.column .column_btn text {
  color: #b9b9b9;
  margin-left: 5rpx;
}

.column .column_text {
  font-size: 28rpx;
  margin: 20rpx 0;
}

.column_user .column_tr .column_time {
  font-size: 22rpx;
  color: #b9b9b9;
}

.column_tr .column_time text {
  vertical-align: middle;
}

.column_tr .column_replay {
  font-size: 20rpx;
  background: #efefef;
  border-radius: 200rpx;
  padding: 4rpx 20rpx;
  margin-left: 18rpx;
}

.fill_comment {
  position: fixed;
  bottom: 0;
  width: 100%;
  background: #f9f9f9;
  padding: 15rpx 0rpx;
  z-index: 99;
}

