  padding: 10rpx 20rpx 10rpx 0;
  border-bottom: 1rpx solid #e7e7e7;
}

.abs_item_author {
  margin-bottom: 10rpx;
}

.abs_item_author image {
  border-radius: 100%;
  width: 52rpx;
  height: 52rpx;
  vertical-align: middle;
}

.abs_item_author text {
  vertical-align: middle;
  font-size: 26rpx;
