/*  标签 左右滑动  */

.p_rel>image {
  position: absolute;
  top: -5rpx;
  right: 0;
  width: 52px;
  height: 34px;
}

.sheet {
  flex-wrap: nowrap;
  overflow-x: scroll;
  white-space: nowrap;
  box-sizing: border-box;
  font-size: 30rpx;
  padding-right: 52rpx;
}

.sheet::-webkit-scrollbar {
  display: none;
}

.sheet text {
  display: inline-block;
  margin-right: 30rpx;
  border-bottom: 1px solid #fff;
  padding-bottom: 17rpx;
}

.sheet .active {
  color: #0a93ff;
  font-size: 34rpx;
  font-weight: 500;
  border-color: #0a93ff;
}

.sheet .item {
  background: #fff;
  margin-left: 20rpx;
  border-radius: 10rpx;
  display: inline-block;
  flex-wrap: wrap;
  padding: 15rpx;
  white-space: normal;
  width: 400rpx;
  box-shadow: 0 1px 4px 0 rgba(210, 208, 208, 0.50);
  font-size: 26rpx;
}

.fs-30 {
  font-size: 30rpx;
}
.fs24{
  font-size: 24rpx;
}

.fl-r {
  float: right;
}

.pad20 {
  padding: 20rpx;
}
.pl-md{
  padding-left:20rpx;
}

.inline-block {
  display: inline-block !important;
}
.text-muted {
    color: #949699 !important;
}
/*  灰条  */

.gap {
  padding: 10rpx;
  background: #f3f4f8;
}

/*  表格  */

.table {
  display: flex;
  flex-direction: column;
}

.table .tr .td_t {
  vertical-align: text-top;
  display: inline-block;
  width: 30%;
  color: #666;
}

.table .tr .td_i {
  vertical-align: text-top;
  display: inline-block;
  width: 65%;
  color: #151515;
}

/*  按钮  */

.bm {
  display: inline-block;
  color: #fff;
  background: #2da3ff;
  padding: 20rpx 220rpx;
  font-size: 32rpx;
  border-radius: 100px;
}

/*  文章内容  */

.content {
  font-size: 30rpx;
  text-indent: 4%;
  text-align: justify;
}

.content .content_img {
  text-indent: 0%;
}

.content image {
  width: 100%;
}

.content .content_label {
  text-indent: 0%;
  margin: 30rpx 0;
}

.content .content_label text {
  display: inline-block;
  border: 1px solid #ddd;
  border-radius: 200rpx;
  font-size: 26rpx;
  color: #999;
  padding: 6rpx 20rpx;
  margin-right: 20rpx;
}

/* //标签 */

.tag {
  position: relative;
  display: inline-block;
  border-radius: 100px;
  font-size: 26rpx;
  padding: 10rpx 20rpx;
  margin: 20rpx;
  margin-bottom: 0rpx;
}

.tag.m {
  background: #2da3ff;
  color: #fff;
}

.tag.tj {
  border: 1px solid #ddd;
}
/*举报  */
.report {
  position: absolute;
  border: 1rpx solid #b9b9b9;
  color: #b9b9b9;
  font-size: 22rpx;
  bottom: 9.5rpx;
  right: 40rpx;
  width: 70rpx;
  text-align: center;
  border-radius: 5rpx;
}