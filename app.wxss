/*  搜索框  */

.section {
  margin: 20rpx;
}

.search {
  display: inline-block;
  vertical-align: middle;
  width: 75%;
  position: relative;
  margin: 0 3%;
}

.search input {
  background: #f6f5f5;
  border-radius: 100px;
  font-size: 28rpx;
  padding: 10rpx;
  padding-left: 80rpx;
}

.p_rel {
  position: relative;
}

.search .i-search {
  position: absolute;
  width: 35rpx;
  height: 35rpx;
  top: 25.5%;
  left: 5%;
  z-index: 2;
}

.ver-middle {
  vertical-align: middle;
}

body, view, text {
  font-family: PingFangSC-Regular;
  color: #333;
}

.mt-n {
  margin-top: 0rpx !important;
}

.mt-sm {
  margin-top: 10rpx;
}

.mt-md {
  margin-top: 20rpx;
}

