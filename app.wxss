  margin-bottom: 8rpx;
}

.abs_item_content image {
  width: 100%;
}

.abs_item_content .content_txt {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 10rpx;
}
.summarys {
  margin-left: 20rpx;
}



.summarys .txt-r view {
  font-size: 22rpx;
